@model Travlr.Models.Views.GrupoViewModel

@{
}

<h2>Agregar o sacar fondos</h2>

 <form asp-action="ManejoFondos" method="POST">
    <div class="form-horizontal">
        <h4>Grupo</h4>
        <hr />
            <h3> Monto Actual: $@Html.DisplayFor(model => model.FondoComun.Monto)<h3>
        <div class="form-group">
            <span>@Html.HiddenFor(model => model.GrupoID)</span>
            <label asp-for="monto" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="monto" class="form-control" />
                <span asp-validation-for="monto" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Para bailar la bamba" class="btn btn-default" />
            </div>
        </div>
    </div>
</form> 
